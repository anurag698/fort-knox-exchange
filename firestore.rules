
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Function to check if the user is an admin by looking at a custom claim
    // In a real app, this would be set by a backend process. For now, we check a doc field.
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // USER DATA
    // Users can only access their own data.
    match /users/{userId} {
      allow get, update, delete: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
      // Admins can list all users, but individual users cannot.
      allow list: if isAdmin();

      // Balances are read-only for the user. Writes must come from the backend.
      match /balances/{balanceId} {
        allow read: if isSignedIn() && isOwner(userId);
        allow write: if false;
      }

      // Deposits are read-only for the user. Writes must come from the backend.
      match /deposits/{depositId} {
         allow read: if isSignedIn() && isOwner(userId);
         allow write: if false;
      }

      // Withdrawals are read-only for the user. Writes must come from the backend.
       match /withdrawals/{withdrawalId} {
         allow read: if isSignedIn() && isOwner(userId);
         allow write: if false;
      }
      
      // Ledger entries are read-only for the user. Writes must come from the backend.
      match /ledgerEntries/{ledgerEntryId} {
        allow read: if isSignedIn() && isOwner(userId);
        allow write: if false;
      }
    }
    
    // ADMIN DATA
    // Only accessible by server-side logic (Admin SDK)
    match /adminUsers/{adminId} {
      allow read, write: if false;
    }
    
    // Admins can see all withdrawal requests
    match /{path=**}/withdrawals/{withdrawalId} {
      allow list: if isAdmin();
    }


    // PUBLIC DATA
    // Anyone can read markets, assets, and market_data.
    match /markets/{marketId} {
      allow get, list: if true;
      allow write: if false; // Should only be seeded by admin
    }

    match /assets/{assetId} {
      allow get, list: if true;
      allow write: if false; // Should only be seeded by admin
    }

    match /market_data/{marketDataId} {
      allow get, list: if true;
      allow write: if false; // Should only be written by backend function
    }

    // TRANSACTIONAL DATA
    // Orders can be created by users, but only read publicly.
    // Trades are public, but only created by the backend.
    match /orders/{orderId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow get, list: if true;
        allow update: if isSignedIn() 
                      && request.auth.uid == resource.data.userId
                      && request.resource.data.status == 'CANCELED';
        allow delete: if false;
    }

    match /trades/{tradeId} {
        allow get, list: if true;
        allow write: if false;
    }

    match /publicData/{docId} {
        allow get, list: if true;
        allow write: if false;
    }
  }
}

    