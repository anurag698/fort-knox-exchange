
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // By default, deny all reads and writes.
    match /{document=**} {
      allow read, write: if false;
    }

    // --- PUBLIC COLLECTIONS ---
    // Anyone can read the list of assets, markets, and live market data.
    match /assets/{assetId} {
      allow read: if true;
    }
    match /markets/{marketId} {
      allow read: if true;
    }
    match /market_data/{marketId} {
      allow read: if true;
    }

    // --- USER DATA ---
    // A user can only access documents within their own user folder.
    match /users/{userId} {
      // Allow a user to read their own profile. Admins can read any profile.
      allow get: if request.auth.uid == userId || isAdmin();
      // Allow a user to create their own profile upon signup.
      allow create: if request.auth.uid == userId;
      // Allow a user to update their own profile, but NOT change their role.
      // Admins can update any profile, including the role.
      allow update: if (request.auth.uid == userId && !('role' in request.resource.data)) || isAdmin();
    }
    
    // This rule applies to all subcollections under a user (balances, deposits, etc.)
    match /users/{userId}/{allDocuments=**} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }

    // --- ORDERS COLLECTION ---
    // This is the critical rule that fixes the permission error.
    match /orders/{orderId} {
      // A user can read (get) a specific order if they are the owner.
      allow get: if request.auth.uid == resource.data.userId;
      
      // A user can list (query) orders ONLY if the query filters by their own userId.
      // This rule is what allows the "My Open Orders" component to work without error.
      allow list: if request.auth.uid != null && request.query.filters[0][2] == request.auth.uid;

      // A user can create an order if they are the owner specified in the order data.
      allow create: if request.auth.uid == request.resource.data.userId;

      // A user can only update their own order, and only to cancel it.
      allow update: if request.auth.uid == resource.data.userId 
                      && request.resource.data.status == 'CANCELED';
    }

    // --- DEX TRANSACTIONS ---
    // These are created by server-side actions, so we don't need client-write rules here.
    // If client needed to read them, a rule like the one for orders would be required.
    match /dex_transactions/{txId} {
      allow read: if isAdmin();
    }


    // --- ADMIN HELPER FUNCTION ---
    // Reusable function to check if the authenticated user is an admin.
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }
  }
}
