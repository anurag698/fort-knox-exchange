
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // USER DATA
    // Users can only access their own data.
    match /users/{userId} {
      allow read, update, delete: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
      
      // User subcollections
      match /{subcollection}/{docId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }
    
    // ADMIN DATA
    // Only accessible by server-side logic (Admin SDK)
    match /adminUsers/{adminId} {
      allow read, write: if false;
    }

    // PUBLIC DATA
    // Anyone can read markets and assets. Only authenticated users (admins) can write.
    match /markets/{marketId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /assets/{assetId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // TRANSACTIONAL DATA
    // Orders can be created by users, but only read publicly.
    // Trades are public, but only created by the backend.
    match /orders/{orderId} {
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow get, list: if true;
        allow update: if isSignedIn() 
                      && request.auth.uid == resource.data.userId
                      && request.resource.data.status == 'CANCELED';
        allow delete: if false;
    }

    match /trades/{tradeId} {
        allow get, list: if true;
        allow write: if false;
    }

    match /publicData/{docId} {
        allow get, list: if true;
        allow write: if false;
    }
  }
}
