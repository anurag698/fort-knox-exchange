
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // PUBLIC collections readable by anyone
    match /assets/{assetId} {
      allow get;
      allow list;
    }
    match /markets/{marketId} {
      allow get;
      allow list;
    }
     match /market_data/{marketId} {
      allow get;
      allow list;
    }

    // USER-specific collections read/writeable only by the owner
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }

    match /users/{userId} {
      // Allow a user to create their own user document upon sign-up.
      allow create: if request.auth.uid == userId;
      // Allow a user to read their own profile.
      allow get: if request.auth.uid == userId;
      // Allow a user to update their own profile data (e.g. username), but not their role.
      allow update: if request.auth.uid == userId && !('role' in request.resource.data);
    }
    
    // ORDERS can only be managed by the user who owns them
    match /orders/{orderId} {
      // Allow user to create and read their own orders.
      allow read, create: if request.auth.uid == request.resource.data.userId;
      // Allow a user to update their own order only to cancel it.
      allow update: if request.auth.uid == resource.data.userId && request.resource.data.status == 'CANCELED';
      // A user cannot delete orders.
      allow delete: if false;
      // This rule allows a user to query the 'orders' collection only if their query
      // includes a 'where("userId", "==", theirId)' clause.
      allow list: if request.query.get("userId") == request.auth.uid;
    }


    // Admins can read/write anything.
    match /{document=**} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }
  }
}
